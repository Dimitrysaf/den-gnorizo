---
import Layout from "../../layouts/Layout.astro";
import { createGitHubAPI } from "../../lib/github.fetch";
import { marked } from "marked";
import { parseMarkdownSafe } from "../../lib/markdown";
import { formatDateCompactCompact, truncateText } from "../lib/utils";

const { number } = Astro.params;
const api = createGitHubAPI();

let discussion = null;
let error = null;

try {
    if (number) {
        discussion = await api.getDiscussion(Number(number));
    }
} catch (e) {
    error = e.message;
}

function getPollPercentage(votes, total) {
    if (total === 0) return 0;
    return Math.round((votes / total) * 100);
}
---

<Layout>
    <div class="ui breadcrumb" style="margin-bottom: 2rem;">
        <a href="/discussion" class="section">Συζήτηση</a>
        <div class="divider">/</div>
        <div class="active section">#{number}</div>
    </div>

    {
        error && (
            <div class="ui negative message">
                <div class="header">Σφάλμα</div>
                <p>{error}</p>
            </div>
        )
    }

    {
        discussion && (
            <div>
                <div class="ui segments">
                    <div class="ui segment raised padded">
                        <h1
                            class="ui header"
                            style="word-break: break-word; font-size: 1.8em;"
                        >
                            {discussion.title}
                        </h1>

                        <div class="ui divider hidden" />

                        <div
                            class="ui content text-body"
                            style="font-size: 1.15em; line-height: 1.6;"
                        >
                            <div
                                set:html={parseMarkdownSafe(discussion.body)}
                            />
                        </div>

                        {discussion.poll && (
                            <div
                                class="ui segment secondary"
                                style="margin-top: 2rem; border: 1px solid rgba(34,36,38,.15);"
                            >
                                <h4 class="ui header">
                                    <i class="chart bar icon" />
                                    {discussion.poll.question}
                                </h4>
                                <div class="ui list">
                                    {discussion.poll.options.nodes.map(
                                        (opt) => {
                                            const voteCount =
                                                opt.totalVoteCount;
                                            const percent = getPollPercentage(
                                                voteCount,
                                                discussion.poll.totalVoteCount,
                                            );
                                            return (
                                                <div
                                                    class="item"
                                                    style="padding: 0.5em 0;"
                                                >
                                                    <div class="content">
                                                        <div
                                                            class="header"
                                                            style="margin-bottom: 0.3em;"
                                                        >
                                                            {opt.option}
                                                            <span style="float:right; color: font-weight: normal;">
                                                                {voteCount} (
                                                                {percent}%)
                                                            </span>
                                                        </div>
                                                        <div
                                                            class="ui tiny progress active"
                                                            data-percent={
                                                                percent
                                                            }
                                                            style="margin: 0;"
                                                        >
                                                            <div
                                                                class="bar"
                                                                style={`width: ${percent}%; min-width: 0;`}
                                                            />
                                                        </div>
                                                    </div>
                                                </div>
                                            );
                                        },
                                    )}
                                </div>
                                <div class="ui meta tiny">
                                    Σύνολο ψήφων:{" "}
                                    {discussion.poll.totalVoteCount}
                                </div>
                            </div>
                        )}
                    </div>

                    <div class="ui secondary segment">
                        <div class="ui stackable grid vertical aligned">
                            <div class="eight wide column">
                                <div class="ui list horizontal">
                                    <div class="item">
                                        <img
                                            class="ui avatar image"
                                            src={discussion.author.avatarUrl}
                                        />
                                        <div class="content">
                                            <div class="header">
                                                {discussion.author.login}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="item" style="color: #666;">
                                        <i class="calendar alternate outline icon" />
                                        {formatDateCompact(discussion.createdAt)}
                                    </div>
                                </div>
                            </div>
                            <div class="eight wide column right aligned mobile-left">
                                <div class="ui labels">
                                    <div class="ui label" title="Κατηγορία">
                                        <span
                                            set:html={discussion.category.emoji}
                                        />
                                        {discussion.category.name}
                                    </div>
                                    <div class="ui basic label" title="Ψήφοι">
                                        <i class="arrow up icon" />
                                        {discussion.upvoteCount}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div
                    class="ui large threaded comments"
                    style="max-width: 100%; margin-top: 2rem;"
                >
                    <h3 class="ui dividing header">
                        Σχόλια ({discussion.comments.nodes.length})
                    </h3>

                    {discussion.comments.nodes.map((comment) => {
                        const isAnswer =
                            discussion.answer &&
                            discussion.answer.id === comment.id;

                        return (
                            <div
                                class={`comment ${isAnswer ? "accepted-answer" : ""}`}
                            >
                                <a class="avatar">
                                    <img src={comment.author.avatarUrl} />
                                </a>
                                <div class="content">
                                    <a class="author">{comment.author.login}</a>
                                    <div class="metadata">
                                        <span class="date">
                                            {formatDateCompact(comment.createdAt)}
                                        </span>
                                        {isAnswer && (
                                            <span class="ui left pointing green label tiny">
                                                <i class="check icon" />{" "}
                                                Επιλεγμένη Απάντηση
                                            </span>
                                        )}
                                    </div>
                                    <div class="text">
                                        <div
                                            set:html={parseMarkdownSafe(
                                                comment.body,
                                            )}
                                        />
                                    </div>
                                </div>

                                {comment.replies &&
                                    comment.replies.nodes.length > 0 && (
                                        <div class="comments">
                                            {comment.replies.nodes.map(
                                                (reply) => (
                                                    <div class="comment">
                                                        <a class="avatar">
                                                            <img
                                                                src={
                                                                    reply.author
                                                                        .avatarUrl
                                                                }
                                                            />
                                                        </a>
                                                        <div class="content">
                                                            <a class="author">
                                                                {
                                                                    reply.author
                                                                        .login
                                                                }
                                                            </a>
                                                            <div class="metadata">
                                                                <span class="date">
                                                                    {formatDateCompact(
                                                                        reply.createdAt,
                                                                    )}
                                                                </span>
                                                            </div>
                                                            <div class="text">
                                                                <div
                                                                    set:html={parseMarkdownSafe(
                                                                        reply.body,
                                                                    )}
                                                                />
                                                            </div>
                                                        </div>
                                                    </div>
                                                ),
                                            )}
                                        </div>
                                    )}
                            </div>
                        );
                    })}

                    {discussion.comments.nodes.length === 0 && (
                        <div class="ui ignored info message">
                            Δεν υπάρχουν ακόμα σχόλια σε αυτή τη συζήτηση.
                        </div>
                    )}
                </div>

                <div class="ui divider" />

                <div style="text-align: center; margin-bottom: 3rem;">
                    <a
                        href={discussion.url}
                        target="_blank"
                        class="ui primary button"
                    >
                        <i class="github icon" />
                        Συμμετοχή στη συζήτηση (GitHub)
                    </a>
                </div>
            </div>
        )
    }
</Layout>

<style>
    .accepted-answer {
        background-color: #f0fff4;
        border: 1px solid #c3e6cb;
        padding: 1em;
        border-radius: 5px;
        margin-bottom: 1em;
    }

    .text-body :global(img) {
        max-width: 100%;
        height: auto;
        border-radius: 5px;
        display: block;
        margin: 1rem 0;
    }

    .text-body :global(pre) {
        background: #f4f4f4;
        padding: 1rem;
        border-radius: 4px;
        overflow-x: auto;
    }

    .text-body :global(blockquote) {
        border-left: 4px solid #ccc;
        margin-left: 0;
        padding-left: 1rem;
        color: #666;
        font-style: italic;
    }

    @media (max-width: 767px) {
        .mobile-left {
            text-align: left !important;
            margin-top: 0.5rem;
        }
    }
</style>
