---

import Navigation from "../components/Navigation.astro";
---

<html lang="el">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fomantic-ui/2.9.3/semantic.min.css">
  </head>

  <body style="margin:0; padding:0; background:#fff">
    <div class="pusher">

      <!-- Mobile layout -->
      <div class="mobile-only ui container">
        <Navigation isMobile />
        <h1 class="ui header" style="padding:1rem 0.5rem">
          Α` Συντακτική Βουλή των Πολιτών
        </h1>
        <div style="padding:0 0.5rem">
          <slot />
        </div>
      </div>

      <!-- Desktop layout -->
      <div class="desktop-only ui container" style="margin:20px 0">
        <h1 class="ui header">Α` Συντακτική Βουλή των Πολιτών</h1>
        <Navigation />
        <div class="ui segment">
          <slot />
        </div>
      </div>

    </div>
  </body>
</html>

<style>
.mobile-only { display: none; }
.desktop-only { display: block; }

@media (max-width: 768px) {
  .mobile-only { display: block; }
  .desktop-only { display: none; }
}
</style>
